<div class="flex flex-col justify-between h-full">
  <div>
    <div class="flex items-center justify-between px-2 mb-4">
      <%= link_to chats_path, data: { turbo_frame: "chat_content" }, class: "p-1.5 hover:bg-gray-50 rounded-lg border border-alpha-black-100 shadow-xs" do %>
        <%= lucide_icon("logs", class: "w-5 h-5 text-gray-500") %>
      <% end %>
      <button class="p-1.5 hover:bg-gray-50 rounded-lg border border-alpha-black-100 shadow-xs">
        <%= lucide_icon("more-horizontal", class: "w-5 h-5 text-gray-500") %>
      </button>
    </div>
  </div>
  <div class="w-full">
    <%= turbo_frame_tag "chat_content" do %>
      <%= link_to new_chat_path, class: "flex items-center gap-2 w-full shadow-xs border border-alpha-black-300 rounded-md px-4 py-2 bg-white text-sm text-gray-500 font-light" do %>
        <%= lucide_icon("sparkles", class: "w-4 h-4") %>
        <span>Ask your AI anything</span>
      <% end %>
    <% end %>
  </div>
</div>
