<%= turbo_frame_tag "chat_content" do %>
<div class="flex flex-col h-full">
  <div class="grow">
    <%= form_with model: @chat, class: "flex flex-col h-full border rounded-lg" do |form| %>
      <div class="grow">
        <%= form.text_area :content, 
          class: "w-full h-full resize-none border-0 bg-transparent focus:ring-0 text-sm text-gray-900 placeholder:text-gray-500 p-3",
          placeholder: "Ask your AI anything...",
          autofocus: true,
          onkeydown: "if(event.key == 'Enter' && !event.shiftKey) { event.preventDefault(); this.form.requestSubmit(); }" %>
      </div>
      
      <div class="flex items-center justify-end p-3">
        <%= form.button "Send", class: "btn btn--primary btn--sm" %>
      </div>
    <% end %>
  </div>
</div>
<% end %>